{
  "framework": "nextjs",
  "regions": ["icn1"],
  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "SKIP_ENV_VALIDATION": "1"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
} 