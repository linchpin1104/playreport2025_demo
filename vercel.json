{
  "framework": "nextjs",
  "regions": ["icn1"],
  "buildCommand": "npm run build",
  "installCommand": "npm install --force --include=dev",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "SKIP_ENV_VALIDATION": "1",
      "NPM_CONFIG_AUDIT": "false",
      "NPM_CONFIG_FUND": "false",
      "NODE_ENV": "development"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
} 